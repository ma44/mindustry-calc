{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}